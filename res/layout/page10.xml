<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/layout_p10"
        >

    <andr.lexibook.mylittlestory.lrrh.ui.ViewIml.GifMovieView
            android:id="@+id/gif_p10_cloud"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            />
    <andr.lexibook.mylittlestory.lrrh.ui.ViewIml.GifMovieView
            android:id="@+id/gif_p10_grand_red"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            />
    <andr.lexibook.mylittlestory.lrrh.ui.ViewIml.GifMovieView
            android:id="@+id/gif_p10_hunter"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            />
    <andr.lexibook.mylittlestory.lrrh.ui.ViewIml.GifMovieView
            android:id="@+id/gif_p10_stone"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            />
    <andr.lexibook.mylittlestory.lrrh.ui.ViewIml.GifMovieView
            android:id="@+id/gif_p10_wolf"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            />
    <LinearLayout
            android:id="@+id/ll_bg_cover"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_x="0px"
            android:layout_y="0px"
            android:orientation="vertical"
            android:background="@drawable/p10_bkg_cover">
    </LinearLayout>

    <AbsoluteLayout
            android:id="@+id/al_pause_p10"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_x="@dimen/btn_play_pause_p10_x"
            android:layout_y="@dimen/btn_play_pause_p10_y"
            android:background="@drawable/lrrh_pasue"
            android:visibility="gone"></AbsoluteLayout>
</AbsoluteLayout>